<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.activiti.sophia.workflow.persistence.impl.mapper.TaskQuery">

	<resultMap id="taskEntity" type="org.activiti.sophia.workflow.persistence.impl.entity.TaskEntity">
          <result property="id" column="id_" />
          <result property="owner" column="OWNER_" />
          <result property="assignee" column="assignee_" />
          <result property="suspensionState" column="suspension_state_" />
          <result property="name" column="name_" />
          <result property="description" column="description_" />
          <result property="createTime" column="create_time_" />
          <result property="dueDate" column="due_date_" />
          <result property="processInstanceId" column="OWNER_" />
           <result property="businessKey" column="BUSINESS_KEY_" />
            <result property="procdefName" column="PROCDEF_NAME_" />
	</resultMap>
	

	<select id="getTaskList" resultMap="taskEntity">
	  SELECT T.*,
      ( SELECT E.BUSINESS_KEY_ FROM ACT_RU_EXECUTION E WHERE T.EXECUTION_ID_=E.ID_) BUSINESS_KEY_  , 
          ( SELECT E.NAME_ FROM ACT_RE_PROCDEF E WHERE T.PROC_DEF_ID_=E.ID_) PROCDEF_NAME_  
    FROM ACT_RU_TASK T
	</select>
	
	
	</mapper>