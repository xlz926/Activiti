<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.activiti.sophia.workflow.persistence.impl.mapper.TaskQueryMap">

	<resultMap id="taskResultMap" type="org.activiti.sophia.workflow.persistence.impl.entity.TaskEntity">
          <result property="id" column="id_" />
          <result property="owner" column="OWNER_" />
          <result property="assignee" column="assignee_" />
          <result property="suspensionState" column="suspension_state_" />
          <result property="name" column="name_" />
          <result property="description" column="description_" />
          <result property="createTime" column="create_time_" />
          <result property="dueDate" column="due_date_" />
          <result property="processInstanceId" column="OWNER_" />
           <result property="businessKey" column="BUSINESS_KEY_" />
            <result property="procdefName" column="PROCDEF_NAME_" />
	</resultMap>
	
	
	<select id="listPage"  parameterType="java.util.Map"  resultMap="taskResultMap">
	${limitBefore}
	 SELECT RES.* ,EX.BUSINESS_KEY_ BUSINESS_KEY_ ,PR.NAME_ PROCDEF_NAME_
	    <include refid="selectTaskByQuery"/>
	  ${limitAfter}
	</select>
	 
     <select id="count" parameterType="java.util.Map" resultType="long">
	  select count(distinct RES.ID_)
        <include refid="selectTaskByQuery"/>
	</select>
	
	 <sql id="selectTaskByQuery">  
     from ACT_RU_TASK RES
    INNER JOIN ACT_RU_EXECUTION EX ON  EX.ID_=RES.EXECUTION_ID_
    INNER JOIN ACT_RE_PROCDEF PR ON PR.ID_ = RES.PROC_DEF_ID_
    INNER JOIN  ACT_RU_IDENTITYLINK I ON I.TASK_ID_ = RES.ID_
       <include refid="commonSelectTaskWhere"/>
    </sql>
	
	<sql id="commonSelectTaskWhere">
	 <where> 
      <if test="taskId != null">
        RES.ID_ = #{taskId}
      </if>
      <if test="name != null">
        and RES.NAME_ = #{name}
      </if>
      <if test="nameLike != null">
        and RES.NAME_ like #{nameLike}
      </if>
      
       <if test=" candidateGroups != null  || assignee !=null">
         and (
             <if test="assignee !=null"> 
              RES.ASSIGNEE_ = #{assignee}
                or
             </if> 
		      ( RES.ASSIGNEE_ is null
		        and I.TYPE_ = 'candidate'
		        and 
		        ( 
		          <if test="assignee != null">
		            I.USER_ID_ = #{assignee}          
		          </if>
		          <if test="assignee != null &amp;&amp; candidateGroups != null &amp;&amp; candidateGroups.size() &gt; 0">
		            or
		          </if>
		          <if test="candidateGroups != null &amp;&amp; candidateGroups.size() &gt; 0">
		            I.GROUP_ID_ IN
		            <foreach item="group" index="index" collection="candidateGroups" 
		                     open="(" separator="," close=")">
		              #{group}
		            </foreach>
		          </if>
		          )
		        )
             )
       </if>
 
	</where>
	</sql>
	
  
	
	
	
	 <select id="selectTask" parameterType="string" resultMap="taskResultMap">
       select * from ACT_RU_TASK where ID_ = #{id}
     </select>
	
	
	</mapper>